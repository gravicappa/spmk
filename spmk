#!/usr/bin/env rc

spmk_cmddir=$HOME/dev/spmk
spmk_inc=$HOME/dev/spmk/
spmk_header=$spmk_inc/main
spmk_mk_d=$HOME/dev/spmk/spmk.d
spmk_privkey=$HOME/dev/spmk/priv.key
root=$HOME/dev/spmk/root
pkgdb=$root/var/lib/spmk
ports=$root/usr/ports
buildroot=$root/tmp/build
test -n $"arch || arch=`{uname -m}

cmd=$1
if (~ $cmd -*)
  shift
switch ($cmd) {
  case ''
    test -f build.mk || {echo 'no build.mk' >[1=2]; exit 1}
    dir=`{pwd}
    cd $pkgdb
    exec mk -f \
      <{awk -f $spmk_cmddir/mkports.awk $"dir/build.mk $ports/*/*/build.mk}

  case -b
    cd $pkgdb
    exec mk -f <{awk -f $spmk_cmddir/mkports.awk $ports/*/*/build.mk} $*

  case -a
    spmk_add $*

  case -r
    exec mk -f <{$spmk_cmddir/mkrevdep spmk_rm} $*

  case -d
    exec mk -f <{awk -f $spmk_cmddir/mkdep.awk $ports/*/*/build.mk} $*

  case -rd
    exec mk -f <{$spmk_cmddir/mkrevdep echo} $*

  case -u
    echo 'TODO: update system' >[1=2]
    exit 1

  case *
    for (f in $*) {
      if (~ $f *.tar.gz && test -f $f)
        spmk_add $f
      if not {
        echo 'Usage: spmk [-b|-a|-r|-d|-rd|-u] packages...'
        exit 1
      }
    }
}
