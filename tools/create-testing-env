#!/usr/bin/env rc

testdir=test
nports=40

rm -rf $testdir

# imaginary root
mkdir -p $testdir/root 

# where building occurs
mkdir -p $testdir/build 

# where database of packages is stored  
mkdir -p $testdir/packages 

# where fake port tree is generated
mkdir -p $testdir/ports 

./tools/generate-fake-ports $testdir/ports $nports

echo '# Testing environment created'
echo ' ' cd  $testdir/packages
echo ' ' mk -f `{pwd}^/mkfile 'some_package'
